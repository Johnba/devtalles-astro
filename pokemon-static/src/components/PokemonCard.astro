---
//import { Link } from "astro:links";
interface Props {
  url: string;
  name: string;
}

const { url, name } = Astro.props as Props;
const id = url.split("/").at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
  href={`/pokemons/${name}`}
  class="rounded border flex flex-col justify-center items-center p-4"
>
  <img class="w-full" src={imageSrc} alt={name} />
  <h2>{name}</h2>
</a>
